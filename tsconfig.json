{
  "compilerOptions": {
    "target": "ES6",
    "outDir": "dist",
    "rootDir": "./src",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "src",
    "paths": {
      "@config/*": [
        "application/config/*"
      ],
      "@domain/*": [
        "domain/*"
      ],
      "@resources/*": [
        "resources/*"
      ],
      "@controllers/*": [
        "application/controllers/*"
      ]
    }
  }
}