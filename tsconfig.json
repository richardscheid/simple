{
  "compilerOptions": {
    "target": "ES6",
    "outDir": "dist",
    "rootDir": "./src",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "paths": {
      "@utils/*": ["utils/*"],
      "@models/*": ["models/*"],
      "@builders/*": ["builders/*"],
      "@services/*": ["services/*"],
      "@resources/*": ["resources/*"],
      "@interfaces/*": ["interfaces/*"],
      "@controllers/*": ["controllers/*"]
    }
  }
}
